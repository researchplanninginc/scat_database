<div class="page-header">
  <h3>Person #<%= @person.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Person</dt>
      <dd><%= @person.person_id %></dd>

      <dt>Last name</dt>
      <dd><%= @person.last_name %></dd>

      <dt>First name</dt>
      <dd><%= @person.first_name %></dd>

      <dt>Org</dt>
      <dd><%= @person.org %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/people" class="btn btn-primary">
        Back
      </a>
      <a href="/people/<%= @person.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_person/<%= @person.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

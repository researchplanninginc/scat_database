<div class="page-header">
  <h1>
    People
    <a href="/people/new" class="btn btn-lg btn-success">New Person</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Person</th>
        <th>Last name</th>
        <th>First name</th>
        <th>Org</th>
        <th>Actions</th>
      </tr>

      <% @people.each do |person| %>
      <tr>
        <td><%= person.person_id %></td>
        <td><%= person.last_name %></td>
        <td><%= person.first_name %></td>
        <td><%= person.org %></td>
        <td>
          <a href="/people/<%= person.id %>" class="btn btn-primary">Show</a>
          <a href="/people/<%= person.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_person/<%= person.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

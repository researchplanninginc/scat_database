<!-- Validation failure messages -->
<% if @lookup_tidal.errors.any? %>
  <% @lookup_tidal.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Lookup Tidal</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_lookup_tidal" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for tidal_code -->
      <div class="form-group">
        <label for="tidal_code" class="control-label">
          Tidal code
        </label>

        <input type="text" id="tidal_code" name="tidal_code" placeholder="Tidal code" class="form-control" value="<%= @lookup_tidal.tidal_code %>">
      </div>

      <!-- Label and input for description -->
      <div class="form-group">
        <label for="description" class="control-label">
          Description
        </label>

        <input type="text" id="description" name="description" placeholder="Description" class="form-control" value="<%= @lookup_tidal.description %>">
      </div>

      <button class="btn btn-success">
        Create Lookup Tidal
      </button>
      or
      <a href="/lookup_tidals">Cancel</a>
    </form>
  </div>
</div>

<!-- Validation failure messages -->
<% if @lookup_pit_char.errors.any? %>
  <% @lookup_pit_char.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Lookup Pit Char</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_lookup_pit_char" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for char_code -->
      <div class="form-group">
        <label for="char_code" class="control-label">
          Char code
        </label>

        <input type="text" id="char_code" name="char_code" placeholder="Char code" class="form-control" value="<%= @lookup_pit_char.char_code %>">
      </div>

      <!-- Label and input for description -->
      <div class="form-group">
        <label for="description" class="control-label">
          Description
        </label>

        <input type="text" id="description" name="description" placeholder="Description" class="form-control" value="<%= @lookup_pit_char.description %>">
      </div>

      <button class="btn btn-success">
        Create Lookup Pit Char
      </button>
      or
      <a href="/lookup_pit_chars">Cancel</a>
    </form>
  </div>
</div>
